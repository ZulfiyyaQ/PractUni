@model LoginVM
<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                        <div class="brand-logo">
                            <img src="~/admin/images/logo.svg" alt="logo">
                        </div>
                        <h4>Login</h4>
                      
                        <form class="pt-3" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            
                            <div class="form-group">
                                <input asp-for="UsernameOrEmail" class="form-control form-control-lg" placeholder="UsernameOrEmail">
                                <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Password" class="form-control form-control-lg" placeholder="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                           
                            <div class="mb-4">
                                <div class="form-check">
                                    <label asp-for="IsRemembered" class="form-check-label text-muted">
                                        <input asp-for="IsRemembered" type="checkbox" class="form-check-input">
                                       Remember Me
                                    </label>
                                </div>
                            </div>
                            <div class="mt-3">
                                <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">SIGN UP</button>
                            </div>
                            <div class="text-center mt-4 font-weight-light">
                               Do not have an account? <a asp-action="register" asp-controller="account" class="text-primary">Register</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>